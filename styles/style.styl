body
  font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
  font-size: 20px;
  font-weight bold;
  color: #FFFFFF;

h1
  font-size 50px;
  @media(max-width: 767px)
    font-size 30px;

h4
  font-size 30px;
  @media(max-width: 767px)
    font-size 16px;

.d-mt150
  @media(min-width: 768px)
    margin-top 150px

.d-mt100
  @media(min-width: 768px)
    margin-top 100px

.d-mt70
  @media(min-width: 768px)
    margin-top 70px

.m-mt50
  @media(max-width: 767px)
    margin-top 50px

.mb50
  margin-bottom: 50px

.w100
  width 100%

.w70
  width 70%

.d-text-right
  @media(min-width: 768px)
    text-align: right

.p10
  padding 10px

.down-btn
  position absolute
  bottom 10px
  left 50%
  transform translateX(-50%)
  height 30px
  width 30px
  cursor pointer
  animation-iteration-count: infinite
  opacity 0.7
  transition 0.3s all

  &:hover
    opacity 1

.header
  background-image: linear-gradient(135deg,#2196F3 0%,#a493e4 92%,#b394e4 100%)
  min-height calc(100vh - 60px)
  padding 100px 0 30px 0
  @media(max-width: 767px)
    padding 70px 0

  .img1
    max-height: 80vh
    max-width: 100%

.section
  padding: 100px 0;
  position relative
  @media(max-width: 767px)
    padding 50px 0 70px 0;

.section2
  background-image: url('../imgs/bg2.jpg')
  background-size: cover
  background-position: center
  min-height 100vh
  background-color: black

.section3
  background-image: url('../imgs/bg3.png')
  background-size: cover
  min-height: 100vh;
  display: flex;
  align-items: center;

.section4
  background-image: url('../imgs/bg4.jpg')
  background-size: cover
  background-color: #333
  min-height: 100vh;
  display: flex;
  align-items: center;

.section5
  background-image: url('../imgs/bg6.jpg')
  background-size: cover
  background-position: center
  min-height: 100vh;
  display: flex;
  align-items: center;

.footer
  background #03A9F4
  padding 60px 0;
  &-header
    font-size: 36px;
    color: #EEF9FF;
    margin-bottom 20px
    @media(max-width: 767px)
      font-size: 20px
      margin-bottom 10px

  .link
    color #ffffff
    font-size 20px
    @media(max-width: 767px)
      font-size: 16px

    > img
      width 100%
      max-width 150px
      margin-bottom: 10px